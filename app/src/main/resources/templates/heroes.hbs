{{#partial "content"}}
    <div class="row">
        <div class="col fw-bold fs-3">All heroes</div>
        <div class="col fw-bold">
            <div class="d-grid gap-2 d-md-flex m-2 justify-content-md-end">
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newHeroModal">
                    Register Hero
                </button>
            </div>
        </div>
    </div>
    {{> new_hero.hbs}}
    <table class="table table-light table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Powers</th>
            <th>Weakness</th>
            <th>Age</th>
        </tr>
        </thead>
        <tbody>
        {{#if heroes}}
            {{#each heroes}}
                <tr>
                    <td>
                        <a href="/hero/{{id}}">{{name}}</a>
                    </td>
                    <td>{{specialPower}}</td>
                    <td>{{weakness}}</td>
                    <td>{{age}}</td>
                </tr>
            {{/each}}
        {{/if}}
        </tbody>
    </table>
{{/partial}}
{{> layout.hbs}}